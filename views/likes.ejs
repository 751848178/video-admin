<% include header %>
	<table class="ui striped table">
	 	<thead>
	    	<tr>
		      	<th>ID</th>
		      	<th>喜欢/不喜欢</th>
		      	<th>用户名</th>
		      	<th>影片名称</th>
		      	<th>星级</th>
		      	<th>影片ID</th>
	    	</tr>
	  	</thead>
		<tbody>
		 <% likes.forEach(function(like){ %>
			<tr>
	    		<td><%=  like.id %></td>
	    		<% if(like.iLike == 1) { %>
	    			<td>喜欢</td>
	    		<% } else{ %>
	    			<td>不喜欢</td>
	    		<% } %>
	    		<td><%=  like.userName %></td>
	    		<td><%=  like.videoName %></td>
	    		<td><%=  like.star %></td>
	    		<td><%=  like.uid %></td>
	    	</tr>
		 <% }) %>
		</tbody>
	</table>
	<div id="page">
		<% if(dataLength == 0 ){ %>
			<p>现在还没有数据，赶快去添加吧！</p>
		<% } %>
		<% min =  nowPage - 2 < 1 ? 1 : nowPage - 2 %>
		<% max =  nowPage + 2 > dataLength ? dataLength : nowPage + 2 %>
		<% if(nowPage != 1) { %>
			<a href="/like?page=<%= 1 %>">首页</a>
			<a href="/like?page=<%= nowPage-1 %>">上一页</a>
		<% } %>
		<% for(var i = min ; i <= max ; i++ ){ %>
			<% if( nowPage == i){ %>
				<a class="active" href="/like?page=<%= i %>">
					<%= i %>
				</a>
				<% }else{ %>
				<a href="/like?page=<%= i %>">
					<%= i %>
				</a>
			<% } %>
		<% } %>
		<% if(nowPage != dataLength) { %>
		<a href="/like?page=<%= nowPage+1 %>">下一页</a>
		<a href="/like?page=<%= dataLength %>">尾页</a>
		<% } %>
		<% if(dataLength > 0 ){ %>
			<span>共<%= dataLength %>页</span>	
		<% } %>
	</div>
<% include footer %>          