<% include header %>
	<table class="ui striped table">
	 	<thead>
	    	<tr>
		      	<th>ID</th>
		      	<th>用户名</th>
		      	<th>头像</th>
	    	</tr>
	  	</thead>
		<tbody>
		 <% users.forEach(function(user){ %>
			<tr>
	    		<td><%=  user.id %></td>
	    		<td><%=  user.userName %></td>
	    		<td>
	    			<% if(user.avator!=''){ %>
	    				<img src="http://vue.wclimb.site/images/avator/<%=  user.avator %>.png" alt="">
	    			<% }else{ %>
	    				还没有上传头像！
	    			<% } %>
	    		</td>
	    	</tr>
		 <% }) %>
		</tbody>
	</table>
	<div id="page">
		<% if(dataLength == 0 ){ %>
			<p>现在还没有数据，赶快去添加吧！</p>
		<% } %>
		<% min =  nowPage - 2 < 1 ? 1 : nowPage - 2 %>
		<% max =  nowPage + 2 > dataLength ? dataLength : nowPage + 2 %>
		<% if(nowPage != 1) { %>
			<a href="/mobileUser?page=<%= 1 %>">首页</a>
			<a href="/mobileUser?page=<%= nowPage-1 %>">上一页</a>
		<% } %>
		<% for(var i = min ; i <= max ; i++ ){ %>
			<% if( nowPage == i){ %>
				<a class="active" href="/mobileUser?page=<%= i %>">
					<%= i %>
				</a>
				<% }else{ %>
				<a href="/mobileUser?page=<%= i %>">
					<%= i %>
				</a>
			<% } %>
		<% } %>
		<% if(nowPage != dataLength && dataLength > 0 ) { %>
		<a href="/mobileUser?page=<%= nowPage+1 %>">下一页</a>
		<a href="/mobileUser?page=<%= dataLength %>">尾页</a>
		<% } %>
		<% if(dataLength > 0 ){ %>
			<span>共<%= dataLength %>页</span>	
		<% } %>
	</div>
<% include footer %>          